[OSEv3:children]
glusterfs


[OSEv3:vars]
openshift_storage_glusterfs_wipe=true
openshift_storage_glusterfs_image=registry.reg-aws.openshift.com:443/rhgs3/rhgs-server-rhel7:3.4.0-7
openshift_storage_glusterfs_heketi_image=registry.reg-aws.openshift.com:443/rhgs3/rhgs-volmanager-rhel7:3.4.0-9.manual.push
openshift_hosted_registry_glusterfs_swap=true
openshift_storage_glusterfs_block_deploy=true
openshift_storage_glusterfs_block_image=registry.reg-aws.openshift.com:443/rhgs3/rhgs-gluster-block-prov-rhel7:3.4.0-6.manual.push
openshift_storage_glusterfs_block_host_vol_size=200
openshift_storage_glusterfs_block_storageclass=true
openshift_storage_glusterfs_timeout=900


[glusterfs]
{{- range .GlusterFSGroup }}
{{.PublicDNS }} glusterfs_devices='["{{ $.OCVars.glusterfs_devices }}"]'
{{- end}}

